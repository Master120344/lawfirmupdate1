/* Define specific animations */
.animate-on-load[data-animation="fadeInUp"],
.animate-on-scroll[data-animation="fadeInUp"] {
    transform: translateY(20px);
    transition-duration: 0.6s;
    transition-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1);
}
/* Apply delays from data-delay attribute if needed by JS */
.animate-on-load[data-delay], .animate-on-scroll[data-delay] {
    transition-delay: calc(var(--animation-override-delay, 0ms) + var(--animation-base-delay, 0ms));
}

