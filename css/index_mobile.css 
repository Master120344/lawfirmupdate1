    box-shadow: 0 0 0 3px rgba(var(--color-accent-gold-hover), 0.3);
    border-radius: var(--radius-subtle);
}
*:focus { outline: none; } /* Remove default if custom is applied */

.container { /* Final check for container consistency */
    padding-left: var(--space-sm);
    padding-right: var(--space-sm);
}
@media (min-width: 768px) { /* For wider viewports if needed, though this is mobile-first */
    .container {
        padding-left: var(--space-md);
        padding-right: var(--space-md);
    }
}