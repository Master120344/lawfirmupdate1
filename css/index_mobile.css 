/* === SCROLL ANIMATIONS === */
.animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    transition-delay: var(--animation-delay, 0s); /* Custom delay per element */
}
.animate-on-scroll.is-visible {
    opacity: 1;
    transform: translateY(0);
}
/* Specific animation types */
.animate-on-scroll[data-animation="fadeIn"] { transform: translateY(0); } /* Just fade */
.animate-on-scroll[data-animation="fadeInUp"] { transform: translateY(30px); }
.animate-on-scroll[data-animation="fadeInDown"] { transform: translateY(-30px); }
.animate-on-scroll[data-animation="fadeInLeft"] { transform: translateX(-30px); }
.animate-on-scroll[data-animation="fadeInRight"] { transform: translateX(30px); }
.animate-on-scroll[data-animation="zoomIn"] { transform: scale(0.9); }
.animate-on-scroll[data-animation="zoomIn"].is-visible { transform: scale(1); }

.animate-on-scroll[data-animation="pulse"].is-visible {
    animation: pulseAnimation 1.5s infinite 0.5s;
}
@keyframes pulseAnimation {
    0% { transform: scale(1); }
    50% { transform: scale(1.03); }
    100% { transform: scale(1); }
}


/* === ACCESSIBILITY FOCUS STYLES === */
a:focus-visible,
button:focus-visible,
input:focus-visible,
textarea:focus-visible,
select:focus-visible,
[tabindex]:not([tabindex="-1"]):focus-visible {
    outline: 3px solid var(--color-primary-light);
    outline-offset: 2px;
    box-shadow: 0 0 0 3px rgba(93, 173, 226, 0.3); /* Subtle glow */
    border-radius: var(--border-radius-small);
}
/* Remove default outline for elements that have focus-visible if browser adds both */
*:focus { outline: none; }

