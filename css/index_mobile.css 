/* === ANIMATIONS (More subtle and professional) === */
.animate-on-load, .animate-on-scroll {
    opacity: 0;
    transition-property: opacity, transform;
    transition-duration: 0.7s; /* Default duration */
    transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.1); /* Softer ease */
}
.animate-on-load.is-visible, .animate-on-scroll.is-visible {
    opacity: 1;
    transform: none !important; /* Remove any transform */
}

/* Specific animation types */
[data-animation="fade-in"] { /* Simple fade in */
    /* Default state is opacity 0 */
}
[data-animation="fade-in-up"] {
    transform: translateY(25px); /* Start slightly down */
}
[data-animation="slide-in-from-bottom"] {
    transform: translateY(40px);
    transition-duration: 0.8s;
}
[data-animation="zoom-in"] {
    transform: scale(0.92);
    transition-duration: 0.6s;
}

/* Apply delays using CSS custom property if JS sets it */
.animate-on-load[data-delay], .animate-on-scroll[data-delay] {
    transition-delay: var(--animation-actual-delay, 0ms);
}

/* === ACCESSIBILITY FOCUS STYLES === */
a:focus-visible, button:focus-visible, [tabindex]:not([tabindex="-1"]):focus-visible {
    outline: 2px solid #63B3ED; /* Light blue accent */
    outline-offset: 2px;
    border-radius: 4px;
    box-shadow: 0 0 0 2px rgba(99, 179, 237, 0.3); /* Subtle glow */
}
*:focus {
    outline: none; /* Remove default if :focus-visible is used */
}