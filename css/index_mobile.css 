.animate-on-scroll[data-animation="slideInUp"] { transform: translateY(80px); transition-duration: 0.7s; transition-timing-function: ease-out; }
.animate-on-scroll[data-animation="scaleUp"] { transform: scale(0.85); transition-duration: 0.6s; }
.animate-on-scroll[data-animation="fadeInRight"] { transform: translateX(-40px); }
.animate-on-scroll[data-animation="zoomIn"] { transform: scale(0.9); transition-duration: 0.5s; }
.animate-on-scroll[data-animation="pulseInfinite"].is-visible { animation: pulseSoft 2s infinite cubic-bezier(0.455, 0.03, 0.515, 0.955) 0.5s; }
@keyframes pulseSoft { 0%, 100% { transform: scale(1); } 50% { transform: scale(1.02); } }

/* Apply delays from data-delay attribute */
.animate-on-scroll[data-delay] { transition-delay: calc(var(--animation-delay-override, 0s) + var(--animation-stagger, 0ms)); }


/* === ACCESSIBILITY FOCUS STYLES === */
a:focus-visible, button:focus-visible, input:focus-visible, [tabindex]:not([tabindex="-1"]):focus-visible {
    outline: 3px solid var(--color-primary-light); outline-offset: 2px;
    box-shadow: 0 0 0 3px rgba(var(--color-primary-light), 0.3);
    border-radius: var(--radius-sharp);
}
*:focus { outline: none; }