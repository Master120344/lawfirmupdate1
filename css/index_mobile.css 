.animate-on-scroll[data-animation="fadeInUpElegantDelayed"] { transform: translateY(40px); transition-duration: 0.9s; transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1); transition-delay: 0.2s; }
.animate-on-scroll[data-animation="slideInFromLeft"] { transform: translateX(-50px); transition-duration: 0.8s; transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94); }
.animate-on-scroll[data-animation="fadeInElegant"] { transform: scale(0.95); transition-duration: 1s; transition-timing-function: ease-out; }
.animate-on-scroll[data-animation="liftUp"] { transform: translateY(30px) scale(0.98); transition-duration: 0.7s; transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1); }
.animate-on-scroll[data-animation="buttonPop"] { transform: scale(0.8); transition-duration: 0.5s; transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275); }

/* Apply delays from data-delay attribute */
